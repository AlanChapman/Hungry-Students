<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-13dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:id="@+id/objectiveItemCardLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/objective_item_card_background"
        android:layout_height="75dp">

<!--        <ImageView-->
<!--            android:id="@+id/scheduleThumbnailImageView"-->
<!--            android:layout_width="78dp"-->
<!--            android:layout_height="78dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@drawable/ic_logo" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/objectiveTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:textFontWeight="600"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:text="Spend 10 000 points"
                android:textAlignment="textStart"
                android:textColor="@color/dark_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/objectiveDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-7dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:lineHeight="14dp"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:letterSpacing="-0.03"
                android:maxLines="2"
                android:text="Spend your first 10 000 points"
                android:textColor="@color/input_text"
                android:textSize="12sp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="-8dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/objectivePointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:lineHeight="14dp"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_semibold"

                android:text="+250 points"
                android:textColor="@color/primary_blue"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>
