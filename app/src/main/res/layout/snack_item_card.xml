<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-13dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:id="@+id/snackItemCardLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/objective_item_card_background"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/scheduleThumbnailImageView"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/simba" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/snackNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:textFontWeight="600"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:text="Simba Chips 125g"
                android:textAlignment="textStart"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/snackCategoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineHeight="14dp"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="-0.03"
                    android:maxLines="2"
                    android:text="Chips"
                    android:textColor="@color/input_text"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/snackCaloriesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineHeight="14dp"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="-0.03"
                    android:maxLines="2"
                    android:text="240 Calories"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp" />

            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="-8dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/snackPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:lineHeight="14dp"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_semibold"

                android:text="R22.50"
                android:textColor="@color/primary_blue"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>
