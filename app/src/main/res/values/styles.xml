<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyleDefault">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textColorHint">@color/input_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/input_default</item>
    </style>

    <style name="EditTextStyleOutline">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textColorHint">@color/input_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/input_outline</item>
    </style>

    <style name="PrimaryBtnStyle" >
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="SecondaryBtnStyle" >
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/secondary_dark_button</item>
    </style>

</resources>